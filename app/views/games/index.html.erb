<h1>Listing games</h1>

<table>
  <tr>
    <th>Site</th>
    <th>Game date</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Status</th>
    <th>Attend count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.site_id %></td>
    <td><%= game.game_date %></td>
    <td><%= game.start_time %></td>
    <td><%= game.end_time %></td>
    <td><%= game.status %></td>
    <td><%= game.attend_count %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

