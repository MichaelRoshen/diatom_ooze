<%= render :partial => "layouts/admin_header" %>
<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :site_id %><br />
    <%= f.select :site_id, Site.all.collect{|s| [s.address, s.id]}%>
  </div>
  <div class="field">
    <%= f.label :game_date %><br />
    <%= date_select "game", "game_date", use_month_numbers: true, :start_year => 2014 %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br />
    <%= collection_select(:game, :start_time, (1..24).to_a, :to_s, :to_s)%>
  </div>
  <div class="field">
    <%= f.label :end_time %><br />
    <%= collection_select(:game, :end_time, (1..24).to_a, :to_s, :to_s)%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
