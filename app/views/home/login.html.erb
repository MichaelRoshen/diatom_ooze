 <div class="row get-started-now">
    <div class="span12 white-panel button-text-panel">
        <div class="white-panel-content">
            <%= form_tag :controller => "users", :action => "login" do %>
				<tr>
				<td align="right" height="30">账号:</td>
				<td align="middle" colSpan="2" height="30">
				<%=text_field :user,:name,:class => "txt" %>
				</td>
				</tr>
				<tr>
				<td align="right" height="30">密码:</td>
				<td align="middle" colSpan="2" height="30">
				<%= text_field :user, :pass, :class => "txt" %> </td>
				 </tr>

				 <tr>
				  <td colspan="2">&nbsp;&nbsp;
				  <%= submit_tag 'login', :class => "btn btn-large btn-danger" , :value=> "登录" %></td>
				<td class="style2" >&nbsp;&nbsp;
				<input type="reset" value="重置" class="btn btn-large btn-danger" name="cancel" ></td>
				</tr>
			<% end %>
        </div>
    </div>
</div>
