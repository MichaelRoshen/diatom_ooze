<div class="row get-started-now">
    <div class="span12 white-panel button-text-panel">
        <div class="white-panel-content">
            <h2><%= @game.game_date.strftime("%m月%d日") %>活动报名表！</h2>
            <a href="/home/enroll?game_id=<%= @game.try(:id) %>" class="btn btn-warning btn-large">报名</a>
        </div>
    </div>
</div>
<div class="row">
  <div class="span12 white-panel no-padding">
    <div class="tab-pane" id="profile">
      <div class="span5">
          <ul class="green-checks">
            <br/>
            <h2>目前报名人数：<%= @users.size %></h2>
            <% @users.each do |user|%>
              <li><h2><%= user.name %> | <%= user.balance %></h2></li>
            <% end %>
          </ul>

          
      </div>
    </div>
  </div>
</div>